<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

            <Button
                android:id="@+id/btn_identify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Identify"
                android:textColor="@color/blue_primary"
                android:background="@drawable/background_trim_blue"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/ic_identify" />


        <Button
            android:id="@+id/btn_treat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Treatment/ First Aid"
            android:textColor="@color/blue_primary"
            android:background="@drawable/background_trim_blue"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_treat"/>

        <Button
            android:id="@+id/btn_inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textColor="@color/blue_primary"
            android:background="@drawable/background_trim_blue"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_inform"/>

        <Button
            android:id="@+id/btn_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FeedBack"
            android:textColor="@color/blue_primary"
            android:background="@drawable/background_trim_blue"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_feedback"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottm_bg"
        android:text="Where There is Life \n There is HOPE"
        android:textColor="@color/white"
        android:gravity="center"/>

</RelativeLayout>